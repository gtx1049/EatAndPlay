<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="com.gtx.eatandplay.ChooseTuan">

    <ImageButton
        android:id="@+id/gotomeituan"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_above="@+id/gotodazhong"
        android:background="#003a14"
        android:layout_marginBottom="20dp"/>

    <ImageButton
        android:id="@+id/gotodazhong"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_centerVertical="true"
        android:background="#00FF00"/>

    <ImageButton
        android:id="@+id/gotonuomi"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_below="@+id/gotodazhong"
        android:background="#3322e0"
        android:layout_marginTop="20dp"/>

</RelativeLayout>
